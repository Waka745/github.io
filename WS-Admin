    <!-- JavaScript for Language Switcher -->
    <script>
        const langJaButton = document.getElementById('lang-ja');
        const langEnButton = document.getElementById('lang-en');
        const elements = [
            'site-name', 'catch', 'nav-contact', 'nav-services', 'nav-fee', 'nav-about',
            'home-title', 'home-text', 'services-title', 'visa-service-title', 'visa-service-text',
            'car-service-title', 'car-service-text', 'fee-title', 'table-service', 'table-price',
            'visa-fee', 'visa-price', 'car-fee', 'car-price', 'name-change-fee', 'name-change-price',
            'fee-note', 'about-title', 'about-text', 'contact-title', 'form-name', 'form-email',
            'form-message', 'form-submit', 'other-support-title', 'other-support-text'
        ];

        function setLanguage(lang) {
            const isJa = lang === 'ja';
            const hideLang = isJa ? 'en' : 'ja';
            const showLang = isJa ? 'ja' : 'en';

            elements.forEach(id => {
                const elJa = document.getElementById(`${id}-ja`);
                const elEn = document.getElementById(`${id}-en`);
                if (elJa) elJa.classList.toggle('hidden', !isJa);
                if (elEn) elEn.classList.toggle('hidden', isJa);
            });

            // Update navigation links for both languages
            const navLinksJa = document.querySelectorAll('[id^="nav-"][id$="-ja"]');
            const navLinksEn = document.querySelectorAll('[id^="nav-"][id$="-en"]');
            navLinksJa.forEach(link => { link.classList.toggle('hidden', !isJa); });
            navLinksEn.forEach(link => { link.classList.toggle('hidden', isJa); });
            
            // Set active link on language switch
            const activeHash = window.location.hash.substring(1);
            if (activeHash) {
                const activeLink = document.querySelector(`.nav-link[href="#${activeHash}"]`);
                if (activeLink) {
                    document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
                    activeLink.classList.add('active');
                }
            }
        }

        // Handle navigation link clicks
        document.querySelectorAll('a.nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href').substring(1);
                document.getElementById(targetId).scrollIntoView({ behavior: 'smooth' });
                
                // Update active state
                document.querySelectorAll('a.nav-link').forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');

                // Update URL hash
                history.pushState(null, null, `#${targetId}`);
            });
        });

        // Initial setup based on hash or default to Japanese
        function initialSetup() {
            const hash = window.location.hash.substring(1);
            if (hash) {
                const targetElement = document.getElementById(hash);
                if (targetElement) {
                    const navLink = document.querySelector(`a.nav-link[href="#${hash}"]`);
                    if (navLink) navLink.classList.add('active');
                }
            } else {
                // Default to Home if no hash
                const homeLink = document.querySelector('a.nav-link[href="#home"]');
                if (homeLink) homeLink.classList.add('active');
            }
            // Set initial language to Japanese
            setLanguage('ja');
        }

        langJaButton.addEventListener('click', () => setLanguage('ja'));
        langEnButton.addEventListener('click', () => setLanguage('en'));
        
        // Initial setup on page load
        window.onload = initialSetup;
    </script>

</body>
